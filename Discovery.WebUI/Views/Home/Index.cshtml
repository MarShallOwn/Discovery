</div>




    <script type="text/javascript">

        var v = document.getElementById("test");

    var k = ["Talent", "Dream", "Passion", "Creativity"];
    var i = 0;
    v.innerHTML = k[0];
    setInterval(function () {
        v.className = v.className === "show" ? "hide" : "show";

        if (v.className === "show") {
            i++;
            v.innerHTML = k[i % k.length];
        }
    }, 2000);

    </script>

