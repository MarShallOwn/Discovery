    <div  class="p-0 page-holder bg-cover d-flex container-fluid">

        <div style="z-index: -1;">
            <img style="height: 100vh;width: 100vw;" src="~/Content/Images/bedo.jpg">
        </div>

        <div style="z-index: 1; position: absolute;" class="w-100 row align-self-center justify-content-center">
